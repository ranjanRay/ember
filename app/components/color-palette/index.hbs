{{#each this.colors as |color|}}
  <ColorPalette::ColorBox @color={{color}} @onClick={{this.removeColor}}/>
{{/each}}
<div class="container">
  <div class="input-div">
    <label for="color-input">Your color: </label>
    <input id="color-input-field" type="text" value={{this.userColorCode}} {{on "change" this.updateColorCode}}/>
  </div>
  <div class="input-div">
    <label for="color-name-field">Color Name: </label>
    <input id="color-name-field" type="text" value={{this.userColorName}} {{on "change" this.updateColorName}}/>
  </div>
  <button type="button" {{on "click" this.addColor}}>Add</button>
</div>